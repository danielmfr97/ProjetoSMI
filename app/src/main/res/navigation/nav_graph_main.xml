<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="br.com.danielramos.projetosmi.view.fragments.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_open_dashboard_fragment"
            app:destination="@id/dashboardFragment" />

        <action
            android:id="@+id/action_open_configuracao_fragment"
            app:destination="@id/configuracoesFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="br.com.danielramos.projetosmi.view.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.danielramos.projetosmi.view.fragments.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginfragment_to_registerfragment"
            app:destination="@id/registerFragment"/>

        <action
            android:id="@+id/action_loginfragment_to_dashboard"
            app:destination="@id/dashboardFragment"/>
    </fragment>

    <fragment
        android:id="@+id/configuracoesFragment"
        android:name="br.com.danielramos.projetosmi.view.fragments.ConfiguracoesFragment"
        android:label="fragment_configuracoes"
        tools:layout="@layout/fragment_configuracoes" />

</navigation>